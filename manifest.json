{
    "manifest_version": 3,
    "name": "IMHentai Downloader",
    "version": "1.0",
    "description": "Fast imhentai downloader.",
    "permissions": [
        "activeTab",
        "cookies",
        "downloads",
        "webRequest"
    ],
    "host_permissions": [
      "https://imhentai.xxx/*",
      "https://m9.imhentai.xxx/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://imhentai.xxx/gallery/*"],
        "js": ["gallery.js"]
      }
    ],
    "action": {
      "default_title": "Media Downloader"
    }
  }
  